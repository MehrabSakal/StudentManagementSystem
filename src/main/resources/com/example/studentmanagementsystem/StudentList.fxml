<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.StudentListController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Student Directory" textFill="#2d3447">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <TextField fx:id="searchField" layoutX="400.0" layoutY="20.0" prefWidth="200.0" promptText="Search (ID, Name)" />

        <TableView fx:id="studentTable" layoutX="20.0" layoutY="70.0" prefHeight="350.0" prefWidth="760.0" stylesheets="@dashboardDesign.css">
            <columns>
                <TableColumn fx:id="colStudentId" prefWidth="90.0" text="Student #" />
                <TableColumn fx:id="colYear" prefWidth="90.0" text="Year" />

                <TableColumn fx:id="colDepartment" prefWidth="100.0" text="Department" />

                <TableColumn fx:id="colFirstName" prefWidth="100.0" text="First Name" />
                <TableColumn fx:id="colLastName" prefWidth="100.0" text="Last Name" />
                <TableColumn fx:id="colGender" prefWidth="70.0" text="Gender" />
                <TableColumn fx:id="colBirthDate" prefWidth="100.0" text="Birth Date" />
                <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
                <TableColumn fx:id="colSemester" prefWidth="80.0" text="Semester" />
                <TableColumn fx:id="colFatherName" prefWidth="120.0" text="Father" />
                <TableColumn fx:id="colMotherName" prefWidth="120.0" text="Mother" />
                <TableColumn fx:id="colPresentAddress" prefWidth="150.0" text="Present Address" />
                <TableColumn fx:id="colPermanentAddress" prefWidth="150.0" text="Permanent Address" />
            </columns>
        </TableView>

        <HBox layoutX="20.0" layoutY="440.0" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#editStudent" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-cursor: hand;" text="EDIT SELECTED" />
                <Button mnemonicParsing="false" onAction="#deleteStudent" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;" text="DELETE SELECTED" />
                <Button mnemonicParsing="false" onAction="#refreshTable" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" text="REFRESH" />
            </children>
        </HBox>
        <Label fx:id="statusLabel" layoutX="380.0" layoutY="450.0" textFill="#2d3447" />
    </children>
</AnchorPane>