<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.CalculateResultController">
   <children>
      <Label layoutX="320.0" layoutY="20.0" text="Calculate Result" textFill="#2d3447">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      
      <HBox layoutX="50.0" layoutY="70.0" spacing="20.0">
         <children>
             <TextField fx:id="studentIdField" promptText="Student ID" />
             <TextField fx:id="yearField" editable="false" promptText="Year" style="-fx-background-color: #ecf0f1;" />
             <TextField fx:id="departmentField" editable="false" promptText="Department" style="-fx-background-color: #ecf0f1;" />
             <ComboBox fx:id="semesterComboBox" prefWidth="150.0" promptText="Select Semester" />
         </children>
      </HBox>
      
      <ScrollPane layoutX="50.0" layoutY="120.0" prefHeight="280.0" prefWidth="700.0" fitToWidth="true">
         <content>
             <VBox fx:id="coursesContainer" spacing="10.0">
                 <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </padding>
             </VBox>
         </content>
      </ScrollPane>
      
      <Button layoutX="50.0" layoutY="440.0" mnemonicParsing="false" onAction="#addCourseRow" prefHeight="30.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Add Course" />
      <Button layoutX="600.0" layoutY="440.0" mnemonicParsing="false" onAction="#calculateAndSave" prefHeight="30.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Calculate &amp; Save" />
      
      <Label fx:id="resultLabel" layoutX="160.0" layoutY="445.0" text="GPA: 0.00" textFill="#2d3447">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" layoutX="300.0" layoutY="445.0" />

   </children>
</AnchorPane>
