<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.GradesController">
    <children>
        <HBox layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="810.0" spacing="20.0">
            <children>

                <VBox prefHeight="560.0" prefWidth="280.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 20;">
                    <children>
                        <Label text="Student Grade Entry" textFill="#47a2b2">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <Label text="Student #:" textFill="#7f8fa6" />
                        <TextField fx:id="idField" editable="true" promptText="Enter Student ID" />

                        <Label text="Year:" textFill="#7f8fa6" />
                        <TextField fx:id="yearField" />

                        <Label text="Department:" textFill="#7f8fa6" />
                        <TextField fx:id="deptField" />

                        <Label text="First Semester:" textFill="#7f8fa6" />
                        <TextField fx:id="firstSemField" promptText="e.g. 1.5" />

                        <Label text="Second Semester:" textFill="#7f8fa6" />
                        <TextField fx:id="secondSemField" promptText="e.g. 1.25" />

                        <HBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20 0 0 0;">
                            <children>
                                <Button mnemonicParsing="false" onAction="#clearFields" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #47A2B2; -fx-text-fill: white;" text="Clear" />
                                <Button mnemonicParsing="false" onAction="#updateGrade" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #47A2B2; -fx-text-fill: white;" text="Update" />
                            </children>
                        </HBox>
                        <Label fx:id="statusLabel" alignment="CENTER" prefWidth="240.0" wrapText="true" />
                    </children>
                </VBox>

                <VBox prefHeight="560.0" prefWidth="510.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 20;" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="gradesTable" prefHeight="200.0" prefWidth="200.0" stylesheets="@dashboardDesign.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="75.0" text="Student #" />
                                <TableColumn fx:id="colYear" prefWidth="75.0" text="Year" />
                                <TableColumn fx:id="colDept" prefWidth="100.0" text="Department" />
                                <TableColumn fx:id="colFirst" prefWidth="75.0" text="First Sem" />
                                <TableColumn fx:id="colSecond" prefWidth="75.0" text="Second Sem" />
                                <TableColumn fx:id="colFinal" prefWidth="75.0" text="Final" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>
