<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.DepartmentDataController">
    <children>
        <HBox layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="810.0" spacing="20.0">
            <children>

                <VBox prefHeight="560.0" prefWidth="280.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 20;">
                    <children>
                        <Label style="-fx-background-color: #47A2B2; -fx-text-fill: white;" text="Manage Departments" textFill="#27ae60">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>

                        <Label text="Department Code" textFill="#7f8fa6" />
                        <TextField fx:id="codeField" promptText="e.g. BSCS" style="-fx-background-color: #f1f2f6;" />

                        <Label text="Department Name" textFill="#7f8fa6" />
                        <TextField fx:id="nameField" promptText="e.g. Computer Science" style="-fx-background-color: #f1f2f6;" />

                        <Label minHeight="10.0" />

                        <Button mnemonicParsing="false" onAction="#addDepartment" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: #47A2B2; -fx-text-fill: white;" text="Add Department" />
                        <Label fx:id="statusLabel" alignment="CENTER" prefWidth="240.0" wrapText="true" />
                    </children>
                </VBox>

                <VBox prefHeight="560.0" prefWidth="510.0" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="deptTable" prefHeight="200.0" prefWidth="200.0" stylesheets="@dashboardDesign.css" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colCode" prefWidth="100.0" text="Code" />
                                <TableColumn fx:id="colName" prefWidth="300.0" text="Department Name" />
                            </columns>
                        </TableView>
                        <Button mnemonicParsing="false" onAction="#deleteDepartment" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="Delete Selected" />
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>
