<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.DashboardController">
    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #2D3447;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" prefHeight="60.0" prefWidth="200.0" text="DASHBOARD" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Button mnemonicParsing="false" onAction="#showAddStudent" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Add Student" />
                <Button mnemonicParsing="false" onAction="#showAllStudents" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="See All Students" />
                <Button mnemonicParsing="false" onAction="#showDepartmentData" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Departments" />
                <Button mnemonicParsing="false" onAction="#showGrades" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Grades of Students" />              <Button mnemonicParsing="false" onAction="#showRequests" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Edit Requests" />
                <Button mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Logout" />
            </children>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="mainContent" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="welcomeLabel" layoutX="20.0" layoutY="20.0" text="Welcome Admin!">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </center>
</BorderPane>