<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.RequestEditController">
   <children>
      <ScrollPane fitToWidth="true" layoutX="10.0" layoutY="10.0" prefHeight="480.0" prefWidth="480.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <content>
            <VBox spacing="20.0">
               <children>
                  <Label text="Correction Request Form" textFill="#2d3447">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label text="Edit the fields you want to change. Leave others as is." textFill="#7f8fa6" wrapText="true" />
                  
                  <GridPane hgap="15.0" vgap="15.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="First Name" />
                        <TextField fx:id="txtFirstName" GridPane.columnIndex="1" />
                        
                        <Label text="Last Name" GridPane.rowIndex="1" />
                        <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Department" GridPane.rowIndex="2" />
                        <TextField fx:id="txtDepartment" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        
                        <Label text="Year Level" GridPane.rowIndex="3" />
                        <TextField fx:id="txtYear" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        
                        <Label text="Semester" GridPane.rowIndex="4" />
                        <TextField fx:id="txtSemester" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        
                        <Label text="Gender" GridPane.rowIndex="5" />
                        <TextField fx:id="txtGender" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        
                        <Label text="Birth Date" GridPane.rowIndex="6" />
                        <TextField fx:id="txtBirthDate" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        
                        <Label text="Father's Name" GridPane.rowIndex="7" />
                        <TextField fx:id="txtFatherName" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        
                        <Label text="Mother's Name" GridPane.rowIndex="8" />
                        <TextField fx:id="txtMotherName" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                        
                        <Label text="Present Address" GridPane.rowIndex="9" />
                        <TextField fx:id="txtPresentAddress" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                        
                        <Label text="Permanent Address" GridPane.rowIndex="10" />
                        <TextField fx:id="txtPermanentAddress" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                     </children>
                  </GridPane>
                  
                  <Button mnemonicParsing="false" onAction="#sendRequest" prefHeight="40.0" prefWidth="440.0" style="-fx-background-color: #47A2B2; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" text="SEND UPDATE REQUEST" />
                  <Label fx:id="statusLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" textFill="#e67e22" wrapText="true">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
