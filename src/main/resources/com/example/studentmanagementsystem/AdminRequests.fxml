<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.AdminRequestsController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Pending Edit Requests" textFill="#2d3447">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="requestTable" layoutX="20.0" layoutY="70.0" prefHeight="400.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80.0" text="Req ID" />
                <TableColumn fx:id="colStudentId" prefWidth="100.0" text="Student ID" />
                <TableColumn fx:id="colField" prefWidth="150.0" text="Field to Change" />
                <TableColumn fx:id="colNewValue" prefWidth="200.0" text="Requested Value" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <HBox layoutX="20.0" layoutY="490.0" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#approveRequest" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="APPROVE" />
                <Button mnemonicParsing="false" onAction="#rejectRequest" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="REJECT" />
            </children>
        </HBox>
        <Label fx:id="statusLabel" layoutX="350.0" layoutY="500.0" />
    </children>
</AnchorPane>